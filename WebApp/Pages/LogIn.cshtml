@page
@model WebApp.Pages.UsersModel
@{
}
<script src="~/js/pages/login.js"></script>

<div class="bs-docs-section">
    <br />

    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="bs-component">
                <form>

                    <legend>User Log In form</legend>

     
                    <div class="form-group">
                        <label for="txtEmail" class="form-label mt-4">Email address</label>
                        <input id="txtEmail" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                <div class="form-group">
                    <label for="txtPassword" class="form-label mt-4">Password</label>
                    <input type="password" class="form-control" id="txtPassword" aria-describedby="emailHelp" placeholder="Enter your Password">
                    <small id="emailHelp" class="form-text text-muted">Use your Password.</small>
                </div>

                </form>
                <br />
                <button id="btnLogIn" class="source-button btn btn-primary btn-xs" type="submit" tabindex="0"><i class="bi bi-code">Log In</i></button>
                <button id="btnCancel" class="source-button btn btn-primary btn-xs" type="button" tabindex="0"><i class="bi bi-code">Cancel</i></button>
                <div class="mt-4">
                    <div class="d-flex link1">
                        <p>Don´t you have an account?   <a asp-area="" asp-page="/Users">  Sign up</a>
                    </div>
                </div>
                <div class="mt-4">
                    <div class="d-flex link2">
                        <a asp-area="" asp-page="/ForgotPassword">Forgot your password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>