@page
@model WebApp.Pages.UserReportModel
@{
}
<script src="~/js/pages/userreport.js"></script>
<div class="bs-docs-section">
    <br />
    <div class="row">
        <legend>Users list</legend>
        <div class="col-lg-12">
            <table id="tbListUsers" class="display" styile="width:100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>LastName</th>
                        <!--     <th>Password</th>-->
                        <th>Email</th>
                        <th>Adress</th>
                        <th>Role</th>
                        <th>Photo</th>
                        <th>PhoneNumber</th>
                        <!-- <th>ValidationOTP</th>-->
                        <!--  <th>ResetOTP</th>-->
                        <th>Status</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="bs-component">
                <form>

                    <legend>Asignar Rol</legend>


                    <div class="form-group">
                        <label for="txtId" class="form-label mt-4">User Id</label>
                        <input id="txtId" type="number" class="form-control" aria-describedby="emailHelp" placeholder="Enter User ID">
                        <small id="emailHelp" class="form-text text-muted">Enter User Id that you want to assing</small>
                    </div>
                    <div class="form-group">
                        <label for="txtRole" class="form-label mt-4">User Role</label>
                        <input type="text" class="form-control" id="txtRole" aria-describedby="emailHelp" placeholder="Enter User Role">
                        <small id="emailHelp" class="form-text text-muted">Use your Password.</small>
                    </div>

                </form>
                <br />
                <button id="btnAssign" class="source-button btn btn-primary btn-xs" type="submit" tabindex="0"><i class="bi bi-code">Asignar Rol</i></button>
               
            </div>
        </div>
    </div>
</div>
