@page
@model WebApp.Pages.BookingSettingsModel
@{
}
<script src="~/js/pages/bookingsettings.js"></script>
<div class="bs-docs-section">
    <br />
    <div class="row">
        <legend>Booking list</legend>
        <div class="col-lg-12">
            <table id="tbListBooking" class="display" styile="width:100%">
                <thead>
                    <tr>
                        <th>ID Booking</th>
                        <th>CheckInDate</th>
                        <th>CheckOutDate</th>
                        <th>Considerations</th>
                        <th>Status</th>
                        <th>ID User</th>
                        <th>ID Pet</th>
                        <th>ID Package</th>
                        <th>Total Price</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="bs-component">
                <form>

                    <legend style="color: #0092d2;">Booking form</legend>

                    <div class="form-group">
                        <label for="txtID" class="form-label mt-4">Booking ID</label>
                        <input type="number" class="form-control" id="txtID" />
                    </div>

                    <div class="form-group">
                        <label for="txtDate" class="form-label mt-4">ChecInDate</label>
                        <input type="datetime-local" class="form-control" id="txtCheckInDate" />
                    </div>

                    <div class="form-group">
                        <label for="txtDate" class="form-label mt-4">ChecOutDate</label>
                        <input type="datetime-local" class="form-control" id="txtCheckOutDate" />
                        </div>
                        <div class="form-group">
                            <label for="txtConsiderations" class="form-label mt-4">Considetarions</label>
                            <input type="text" class="form-control" id="txtConsiderations" />
                        </div>
                    

                    <div class="form-group">
                        <label for="txtStatus" style="display:none" class="form-label mt-4">Status</label>
                        <input type="text" style="display:none" class="form-control" id="txtStatus" />
                    </div>

                    <div class="form-group">
                        <label for="txtIdUser" class="form-label mt-4">User ID</label>
                        <input id="txtIdUser" type="number" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="txtIdPet" class="form-label mt-4">Pet ID</label>
                        <input id="txtIdPet" type="number" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="txtIdPackage" class="form-label mt-4">ID Package</label>
                        <input id="txtIdPackage" type="number" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="txtTotalPrice" class="form-label mt-4">Total Price</label>
                        <input id="txtTotalPrice" type="number" class="form-control" readonly="readonly" value="0">
                    </div>



                </form>
                <br />
                @*<button id="btnNew" class="source-button btn btn-info btn-xs" type="button" tabindex="0"><i class="bi bi-code">New</i></button>*@
                <button id="btnUpdate" class="source-button btn btn-primary btn-xs" type="button" tabindex="0"><i class="bi bi-code">Editar Reserva</i></button>
                <button id="btnDelete" class="source-button btn btn-primary btn-xs" type="button" tabindex="0"><i class="bi bi-code">Eliminar reserva</i></button>
                @*<button id="btnUpdate" class="source-button btn btn-primary btn-xs" type="button" tabindex="0"><i class="bi bi-code">Update</i></button>
                <button id="btnDelete" class="source-button btn btn-primary btn-xs" type="button" tabindex="0"><i class="bi bi-code">Delete</i></button>
                @*<button id="btnUpdate" class="source-button btn btn-warning btn-xs" type="button" tabindex="0"><i class="bi bi-code">Update</i></button>
                <button id="btnDelete" class="source-button btn btn-danger btn-xs" type="button" tabindex="0"><i class="bi bi-code">Delete</i></button>*@
            </div>
        </div>


    </div>
</div>